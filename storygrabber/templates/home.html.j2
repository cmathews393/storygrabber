{% extends "base.html.j2" %}

{% block title %}Home - StoryGrab{% endblock %}

{% block content %}
  <div class="sg-card">
    <h1 class="sg-title">Welcome to StoryGrab</h1>
    <p class="sg-text">This is the home page for the StoryGrab web interface.</p>
    <p class="sg-text">Use the navigation above to go to your <a class="sg-link" href="{{ url_for('main.dashboard') }}">dashboard</a> or <a class="sg-link" href="{{ url_for('main.settings') }}">settings</a>.</p>

    <hr class="sg-divider" />

    <h2 class="sg-section-title">Fetch books by username</h2>
    <form id="get-books-form" class="sg-form" role="search">
      <div class="sg-input-wrap">
        <label for="username-input" class="sr-only">Username</label>
        <input id="username-input" class="sg-input" placeholder="Enter StoryGraph username" aria-label="username" />
      </div>
      <div>
        <button id="get-books-btn" type="submit" class="sg-btn sg-btn-primary">Get books</button>
      </div>
    </form>

    <div id="get-books-results" class="sg-results"></div>
    <div id="get-books-meta" class="sg-meta">
      <div id="get-books-updated"></div>
      <button id="refresh-books-btn" class="sg-btn sg-btn-secondary hidden">Refresh</button>
    </div>
  </div>
{% endblock %}

{% block scripts %}
  <script src="{{ url_for('static', filename='get_books_widget.js') }}"></script>
{% endblock %}
