<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}StoryGrab{% endblock %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/styles.css') }}">
  </head>
  <body class="sg-app">
    <nav class="sg-nav">
      <div class="sg-container">
        <div class="sg-nav-inner">
          <div class="sg-nav-left">
            <a class="sg-brand" href="{{ url_for('main.index') }}">StoryGrab</a>
            <div class="sg-nav-links">
              <a href="{{ url_for('main.index') }}" class="sg-nav-link {% if request.path == url_for('main.index') %}active{% endif %}">Home</a>
              <a href="{{ url_for('main.dashboard') }}" class="sg-nav-link {% if request.path == url_for('main.dashboard') %}active{% endif %}">Dashboard</a>
              <a href="{{ url_for('main.settings') }}" class="sg-nav-link {% if request.path == url_for('main.settings') %}active{% endif %}">Settings</a>
            </div>
          </div>
          <div class="sg-nav-right">
            <button id="mobile-menu-btn" aria-label="Open menu" class="sg-mobile-btn">â˜°</button>
          </div>
        </div>
      </div>
    </nav>

    <main class="sg-main">
      {% block content %}{% endblock %}
    </main>

    {% block scripts %}{% endblock %}
  </body>
</html>
