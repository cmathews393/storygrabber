# StoryGrabber Configuration

# =============================================
# GENERAL SETTINGS
# =============================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO

# The URL for the flaresolverr service
# Default: localhost:8191/v1
FS_URL=http://localhost:8191/v1

# Book manager to use: "Lazy" for LazyLibrarian or "Readarr"
# Default: Lazy
SG_MANAGER=Lazy

# Comma-separated list of StoryGraph usernames to fetch reading lists from
# Example: user1,user2,user3
SG_USERS=yourusername

# =============================================
# LAZYLIBRARIAN SETTINGS
# =============================================

# LazyLibrarian host
# Default: localhost
LL_HOST=localhost

# LazyLibrarian port
# Default: 5299
LL_PORT=5299

# LazyLibrarian API key (required for integration)
LL_API_KEY=your_lazylibrarian_api_key

# Use HTTPS for LazyLibrarian connection (true/false)
# Default: False
LL_HTTPS=False

# =============================================
# READARR SETTINGS
# =============================================

# Readarr host
# Default: localhost
READARR_HOST=localhost

# Readarr port
# Default: 8787
READARR_PORT=8787

# Readarr API key (required for integration)
READARR_API_KEY=your_readarr_api_key

# Use HTTPS for Readarr connection (true/false)
# Default: False
READARR_HTTPS=False

# Base path for Readarr (if running behind a reverse proxy with a base path)
# Example: /readarr
READARR_BASE_PATH=

# Quality profile ID to use when adding books in Readarr
# Default: 1
READARR_QUALITY_PROFILE_ID=1

# Metadata profile ID to use when adding books in Readarr
# Default: 1
READARR_METADATA_PROFILE_ID=1

# Root folder where Readarr will store books
# Default: /books
READARR_ROOT_FOLDER=/books

# =============================================
# AUDIOBOOKSHELF (ABS) SETTINGS (optional)
# =============================================

# Base URL for Audiobookshelf (include scheme, e.g. https://abs.example)
ABS_URL=

# API key for Audiobookshelf (required to enable ABS integration) [secret]
ABS_KEY=

# If you use Audiobookshelf, specify the library IDs to check for ebook/audio availability
ABS_EBOOK_LIBRARY=
ABS_AUDIOBOOK_LIBRARY=

# Audiobookshelf in-memory library cache TTL (seconds)
# Default: 60
ABS_CACHE_TTL=60

# =============================================
# APPLICATION SETTINGS
# =============================================

# Flask secret key (used by Flask for session signing).
# Default: change this in production
SECRET_KEY=your_flask_secret_key

# Flask logging level
# Default: INFO
FLASK_LOG_LEVEL=INFO

# Optional: port to run the Flask app on (default: 8000)
PORT=8000

# StoryGraph cache TTL (seconds)
# Controls how long StoryGraph book lists are cached by endpoints like /api/match_books
# Default: 900
SG_CACHE_TTL=900

# LazyLibrarian in-memory getAllBooks cache TTL (seconds)
# Default: 60
LL_CACHE_TTL=60

