<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}StoryGrab{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              'sg-dark': '#0b0f17',
              'sg-darker': '#07090d',
              'sg-muted': '#1f2937',
              'sg-accent': '#7c3aed',
              'sg-accent-2': '#6d28d9'
            }
          }
        }
      }
    </script>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
  </head>
  <body class="bg-sg-dark text-gray-200 min-h-screen">
    <nav class="bg-sg-darker border-b border-sg-muted">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a class="text-lg font-semibold text-white" href="{{ url_for('main.index') }}">StoryGrab</a>
            <div class="hidden md:block ml-6">
              <div class="flex space-x-2 items-center">
                <a href="{{ url_for('main.index') }}" class="px-3 py-2 rounded-md text-sm font-medium {% if request.path == url_for('main.index') %}bg-sg-accent text-white{% else %}text-gray-300 hover:bg-gray-800 hover:text-white{% endif %}">Home</a>
                <a href="{{ url_for('main.dashboard') }}" class="px-3 py-2 rounded-md text-sm font-medium {% if request.path == url_for('main.dashboard') %}bg-sg-accent text-white{% else %}text-gray-300 hover:bg-gray-800 hover:text-white{% endif %}">Dashboard</a>
                <a href="{{ url_for('main.settings') }}" class="px-3 py-2 rounded-md text-sm font-medium {% if request.path == url_for('main.settings') %}bg-sg-accent text-white{% else %}text-gray-300 hover:bg-gray-800 hover:text-white{% endif %}">Settings</a>
              </div>
            </div>
          </div>
          <div class="-mr-2 flex md:hidden">
            <button id="mobile-menu-btn" aria-label="Open menu" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-800">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-5xl mx-auto px-4 py-6">
      {% block content %}{% endblock %}
    </main>

    {% block scripts %}{% endblock %}
  </body>
</html>
